<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".classes.PreviousPregnancy"
    android:id="@+id/FrameLayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREVENTIVE SERVICES"
                android:textColor="@color/primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp">
                        <TableRow>
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="170dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/primary"
                                android:text="Date"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/primary"
                                android:text="Next Visit"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                        </TableRow>
                    </TableLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/preventiveServicesRecycler"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:layout_width="390dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"
                            android:text="* IPT give SP at 4 weeks intervals from 16 weeks gestation to term, in malaria endemic areas."

                            android:textSize="15sp"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:layout_width="390dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"
                            android:text="Long lasting Incecticidal net (LLIN)"
                            android:textSize="15sp"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:layout_width="390dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"
                            android:text="Deworming (Mebendazole 500mgs) given once in the 2nd trimester date given"
                            android:textSize="15sp"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:background="@drawable/cell_shape"
                            android:layout_width="390dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"

                            android:text="Iron and Folate    270 Tablets"
                            android:textSize="15sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>


                </LinearLayout>



            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary"
                android:text="@string/update_details"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/updatematernalprofile"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferrous Fumarate"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Combined Tablet-60mg iron and 400 Î¼g folic acid)or any other available"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="5dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp">
                        <TableRow>

                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:text="Visit Order"
                                android:textColor="@color/primary"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:text="No. of Weeks"
                                android:textColor="@color/primary"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:text="No of tablets"
                                android:textColor="@color/primary"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                            <TextView
                                android:background="@drawable/cell_shape"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal"
                                android:text="Date Given"
                                android:textColor="@color/primary"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />
                        </TableRow>


                    </TableLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="12dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ferrousRecycler"/>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary"
                android:text="@string/update_details"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/updatematernalprofile1"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>