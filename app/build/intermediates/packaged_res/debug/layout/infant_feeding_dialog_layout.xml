<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFANT FEEDING"
        android:textSize="18sp"
        android:textColor="@color/secondary"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/primary"
        android:background="@color/primary"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infant feeding Counseling done (Yes/No)"
            android:textSize="15sp"/>
        <EditText
            android:layout_width="40dp"
            android:textColor="@color/primary"
            android:layout_height="wrap_content"
            android:id="@+id/counsellingDoneHolder1"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Counseling on exclusive breastfeeding done (Yes/No)"
            android:textSize="15sp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/counsellingOnBreastFeedingHolder1"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="SUBMIT"
        android:textSize="15sp"
        android:id="@+id/submit"
        android:textColor="@color/secondary"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"/>



</LinearLayout>