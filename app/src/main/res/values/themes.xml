<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoenixHomes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PhoenixHomes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PhoenixHomes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PhoenixHomes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="line">
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
        <style name="MyToolbarStyle">
            <item name="backgroundColor">@color/primary</item>
            <item name="android:fillColor">@color/primary</item>
            <item name="colorContainer">@color/primary</item>
            <item name="android:textColor">@color/white</item>
        </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/secondary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/primary</item>    <!--days of the week-->
    </style>
    </resources>
