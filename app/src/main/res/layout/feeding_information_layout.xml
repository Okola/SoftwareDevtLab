<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:backgroundTint="#DCEEF1F4"
    android:layout_marginHorizontal="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breastfeeding (Well/Poorly/Unable to breastfeed) :"
                android:textSize="15sp"
                android:layout_marginHorizontal="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:id="@+id/breastfeedingHolder"
                android:textSize="15sp"
                android:textColor="@color/primary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other feeds introduced below 6 months: (Yes/No) .If yes, at what age"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="12dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/otherfeedsintroducedNoHolder"
                    android:textSize="15sp"
                    android:textColor="@color/primary"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complementary food: Other foods introduced: (Yes/No)"
                android:textSize="15sp"
                android:layout_marginHorizontal="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:id="@+id/complimentaryfoodHolder"
                android:textSize="15sp"
                android:textColor="@color/primary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retention of feeds/indigestion:"
                android:textSize="15sp"
                android:layout_marginHorizontal="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/retentionHolder"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="15sp"
                android:textColor="@color/primary"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>